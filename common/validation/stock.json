{
    "$id": "http://xarxa.com/schemas/stock.json#",
    "title": "Stock",
    "description": "A stock",
    "properties": {
        "customerId": {
            "type": "integer"
        },
        "warehouseId": {
            "type": "integer"
        },
        "boxes": {
            "$ref": "stockBox.json#"
        },
        "palets": {
            "$ref": "stockPallet.json#"
        },
        "documents": {
            "type": [
                "array",
                "null"
            ],
            "items": {
                "$ref": "documentAttachment.json#"
            }
        },
        "services": {
            "type": [
                "array",
                "null"
            ],
            "items": {
                "$ref": "stockService.json#"
            }
        },
        "reference": {
            "type": "string",
            "minLength": 1
        },
        "quantity": {
            "type": "integer"
        }
    },
    "required": [
        "customerId",
        "warehouseId",
        "reference",
        "quantity"
    ]
}
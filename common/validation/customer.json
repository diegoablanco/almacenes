{
    "id": "http://xarxa.com/schemas/customer.json#",
    "title": "Warehouse customer",
    "description": "A warehouse customer",
    "type": "object",
    "properties": {
      "companyName": {
        "type": "string"
      },
      "authorizedSignatory": {"type": ["object", "null"], "$ref": "contact.json#"},
      "address": {"type": ["object", "null"], "$ref": "address.json#"},
      "account": {"type": ["object", "null"], "$ref": "account.json#"},
      "authorizedPersons": {
        "type": ["array", "null"],
        "items": { "type": ["object", "null"], "$ref": "contact.json#"}
      }
    },
    "required": ["companyName"]
}